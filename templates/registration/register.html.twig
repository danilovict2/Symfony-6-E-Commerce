{% extends 'base.html.twig' %}

{% block title %}Register
{% endblock %}

{% block body %}
	{% for flash_error in app.flashes('verify_email_error') %}
		<div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
			<span class="block sm:inline">{{ flash_error }}</span>
			<span class="absolute top-0 bottom-0 right-0 px-4 py-3">
				<svg class="fill-current h-6 w-6 text-red-500" role="button" xmlns="http://www.w3.org/2000/svg" viewbox="0 0 20 20">
					<title>Close</title><path d="M14.348 14.849a1.2 1.2 0 0 1-1.697 0L10 11.819l-2.651 3.029a1.2 1.2 0 1 1-1.697-1.697l2.758-3.15-2.759-3.152a1.2 1.2 0 1 1 1.697-1.697L10 8.183l2.651-3.031a1.2 1.2 0 1 1 1.697 1.697l-2.758 3.152 2.758 3.15a1.2 1.2 0 0 1 0 1.698z"/></svg>
			</span>
		</div>
	{% endfor %}

	<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
		<h2 class="text-2xl font-semibold text-center mb-4">Create an account</h2>
		<p class="text-center text-gray-500 mb-3">
			or
			<a href="{{ path('app_login') }}" class="text-sm text-purple-700 hover:text-purple-600">
				login with existing account
			</a>
		</p>

		{{ form_errors(registrationForm) }}

		{{ form_start(registrationForm, { attr: { class: 'w-[400px] mx-auto p-6 my-16' } }) }}
		<div class="mb-4">
			{{ form_label(registrationForm.name, 'Your Name', { label_attr: { class: 'block text-sm font-medium leading-6 text-gray-900' } }) }}
			{{ form_widget(registrationForm.name, { attr: { class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' } }) }}
		</div>
		<div class="mb-4">
			{{ form_label(registrationForm.email, 'Your Email', { label_attr: { class: 'block text-sm font-medium leading-6 text-gray-900' } }) }}
			{{ form_widget(registrationForm.email, { attr: { class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' } }) }}
		</div>
		<div class="mb-4">
			{{ form_label(registrationForm.plainPassword, 'Password', { label_attr: { class: 'block text-sm font-medium leading-6 text-gray-900' } }) }}
			{{ form_widget(registrationForm.plainPassword, { attr: { class: 'block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-indigo-600 sm:text-sm sm:leading-6' } }) }}
		</div>
		<button class="btn-primary bg-emerald-500 hover:bg-emerald-600 active:bg-emerald-700 w-full">Register</button>
		{{ form_end(registrationForm) }}
	</div>
{% endblock %}
